<Window x:Class="KonyvtarKarbantarto.Windows.FelhCreate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonyvtarKarbantarto.Windows"
        mc:Ignorable="d"
        Title="FelhCreate" Height="200" Width="430">
    <Grid>
        <StackPanel>
            <Label FontSize="15" Content="Az email cím mezőbe csak a &quot;kkszki.hu&quot; előtti részt kell beírni!&#xA;(Például : nagyk)"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Email cím : " Margin="10 0 10 0" FontSize="20"/>
                <TextBox Width="150" Height="30" Margin="10 0 10 0" FontSize="20" x:Name="Email_Adress" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Jelszó : " Margin="42 0 10 0" FontSize="20"/>
                <TextBox Width="150" Height="30" Margin="10 0 10 0" x:Name="Password" FontSize="20" VerticalAlignment="Center"/>
            </StackPanel>
            <Button x:Name="Register" Click="Register_Click" Content="Felhasználó Regisztrálása" Width="170" Height="25" FontSize="15" HorizontalAlignment="Left" Margin="10 5 10 10"/>
        </StackPanel>
    </Grid>
</Window>
