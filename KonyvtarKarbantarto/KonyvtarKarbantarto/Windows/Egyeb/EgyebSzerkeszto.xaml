<Window x:Class="KonyvtarKarbantarto.Windows.EgyebSzerkeszto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonyvtarKarbantarto.Windows"
        mc:Ignorable="d"
        Title="Szerkesztő" Height="200" Width="320">
    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label FontSize="30" Content="Név :"/>
                <TextBox x:Name="Name" FontSize="30" Width="200"/>
            </StackPanel>
            <Button HorizontalAlignment="Left" Margin="10" FontSize="30" x:Name="Execute" Content="Kész" Width="200" Click="Execute_Click"/>
        </StackPanel>
    </Grid>
</Window>
