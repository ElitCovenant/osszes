<Window x:Class="KonyvtarKarbantarto.Windows.Felhasznalo.PasswordReset"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KonyvtarKarbantarto.Windows.Felhasznalo"
        mc:Ignorable="d"
        Title="PasswordReset" Height="120" Width="240">
    <Grid>
        <StackPanel Margin="10 10 10 10">
        <StackPanel Orientation="Horizontal">
            <Label Content="Új jelszó :" />
            <TextBox x:Name="NewPassword" Width="120" Height="30"/>
        </StackPanel>
            <Button Margin="10 10 10 10" Click="Reset_Click" HorizontalAlignment="Left" x:Name="Reset" Content="Visszaállítás" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
